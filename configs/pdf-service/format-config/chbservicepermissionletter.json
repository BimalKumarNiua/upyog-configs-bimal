{
  "key": "chbpermissionletter",
  "config": {
    "defaultStyle": {
      "font": "Cambay"
    },
    "content": [
      {
        "style": "noc-head",
        "table": {
          "widths": [100, "*", 200],
          "body": [
            [
              {
                "image": "{{logoImage}}",
                "width": 80,
                "height": 45
              },
              {
                "stack": [
                  {
                    "style": "header",
                    "text": "PERMISSION LETTER"
                  }
                ],
                "alignment": "center",
                "margin": [0, 0, 0, 0]
              },
              {
                "stack": [
                  {
                    "text": "{{address}}",
                    "alignment": "right"
                  },
                  {
                    "text": "{{website}}",
                    "alignment": "right"
                  },
                  {
                    "text": "{{email}}, {{phoneNumber}}",
                    "alignment": "right"
                  }
                ],
                "color": "#484848",
                "margin": [0, 0, 0, 0]
              }
            ]
          ]
        },
        "layout": "noBorders"
      },
      {
        "stack": [
          {
            "text": "Booking No- {{bookingNo}}",
            "style": "bookingNo",
            "alignment": "right",
            "margin": [0, 10, 0, 0]
          },
          {
            "text": [
              {"text": "Subject: Permission to use the ", "bold": false},
              {"text": "{{HALL_NAME}}", "bold": false},
              {"text": " by holding for ", "bold": false},
              {"text": "{{PURPOSE}}", "bold": false},
              {"text": " purpose.", "bold": false}
            ],
            "style": "subject",
            "margin": [0, 0, 0, 5]
          },
          {
            "text": [
              {"text": "Dear ", "bold": false},
              {"text": "{{APPLICANT_NAME}}, ", "bold": false}
            ],
            "style": "content",
            "margin": [0, 0, 0, 10]
          },
          {
            "text": [
              {"text": "Permission is hereby accorded to use the ", "bold": false},
              {"text": "{{HALL_NAME}} ", "bold": false},
              {"text": "{{PURPOSE}} ", "bold": false},
              {"text": "purpose mentioned in your letter.", "bold": false}
            ],
            "style": "content",
            "margin": [0, 0, 0, 10]
          },
          {
            "text": [
              {"text": "1. Area / Accommodation Booked: ", "bold": false},
              {"text": "{{HALL_NAME}}"}
            ],
            "style": "content",
            "margin": [0, 5, 0, 5]
          },
          {
            "text": [
              {"text": "2. Date of Booking: ", "bold": false},
              {"text": "{{BOOKING_DATE}}"}
            ],
            "style": "content",
            "margin": [0, 5, 0, 5]
          },
          {
            "text": [
              {"text": "3. Period of Booking from: ", "bold": false},
              {"text": "{{BOOKING_FROM_DATE}} to {{BOOKING_TO_DATE}}"}
            ],
            "style": "content",
            "margin": [0, 5, 0, 5]
          },
          {
            "text": "Detailed Amount:",
            "style": "subheader",
            "margin": [0, 10, 0, 5]
          },
          {
            "table": {
              "widths": ["*", "*", "*", "*", "*"],
              "body": [
                [
                  {
                    "stack": [
                      { "text": "Rent", "bold": false }
                    ],
                    "alignment": "left" 
                  },
                  {
                    "stack": [
                      { "text": "SGST" }
                    ],
                    "alignment": "left" 
                  },
                  {
                    "stack": [
                      { "text": "CGST", "bold": false }
                    ],
                    "alignment": "left" 
                  },
                  {
                    "stack": [
                      { "text": "REFUNDABLE SECURITY" }
                    ],
                    "alignment": "left" 
                  },
                  {
                    "stack": [
                      { "text": "TOTAL AMOUNT", "bold": false }
                    ],
                    "alignment": "left" 
                  }
                ],
                [
                  {
                    "stack": [
                      { "text": "{{rent}}", "bold": false }
                    ],
                    "alignment": "left" 
                  },
                  {
                    "stack": [
                      { "text": "{{sgst}}" }
                    ],
                    "alignment": "left" 
                  },
                  {
                    "stack": [
                      { "text": "{{cgst}}", "bold": false }
                    ],
                    "alignment": "left" 
                  },
                  {
                    "stack": [
                      { "text": "{{securityDeposit}}" }
                    ],
                    "alignment": "left" 
                  },
                  {
                    "stack": [
                      { "text": "{{totalAmount}}" }
                    ],
                    "alignment": "left" 
                  }
                ]
              ]
            }
          },
          {
            "text": "Bank Details for Refund",
            "style": "subheader",
            "margin": [0, 10, 0, 5]
          },
          {
            "table": {
              "widths": ["*", "*", "*", "*"],
              "body": [
                [
                  {
                    "stack": [
                      { "text": "Applicant Name ", "bold": false }
                    ],
                    "alignment": "left" 
                  },
                  {
                    "stack": [
                      { "text": "A/C No." }
                    ],
                    "alignment": "left" 
                  },
                  {
                    "stack": [
                      { "text": "Bank Name ", "bold": false }
                    ],
                    "alignment": "left" 
                  },
                  {
                    "stack": [
                      { "text": "IFSC CODE" }
                    ],
                    "alignment": "left" 
                  }
                ],
                [
                  {
                    "stack": [
                      { "text": "{{APPLICANT_NAME}}", "bold": false }
                    ],
                    "alignment": "left" 
                  },
                  {
                    "stack": [
                      { "text": "{{ACCOUNT_NUMBER}}" }
                    ],
                    "alignment": "left" 
                  },
                  {
                    "stack": [
                      { "text": "{{BANK_NAME}}", "bold": false }
                    ],
                    "alignment": "left" 
                  },
                  {
                    "stack": [
                      { "text": "{{IFSC_CODE}}" }
                    ],
                    "alignment": "left" 
                  }
                ]
              ]
            }
          },
          {
            "text": "TERMS AND CONDITIONS",
            "style": "termsTitle",
            "margin": [0, 5, 0, 5]
          },
          {
            "text": "{{terms}}",
            "style": "content",
            "margin": [0, 5, 0, 5]
          },
          {
            "text": "CANCELLATION POLICY",
            "style": "termsTitle",
            "margin": [0, 5, 0, 5]
          },
          {
            "text": "{{cancellationPolicy}}",
            "style": "content",
            "margin": [0, 5, 0, 0]
          },
          {
            "text": "DISCLAIMER",
            "style": "termsTitle",
            "margin": [0, 0, 0, 5] 
          },
          {
            "text": "{{DISCLAIMER}}",
            "style": "content",
            "margin": [0, -12, 0, 5]  
          }
        ],
        "alignment": "left",
        "margin": [0, 0, 0, 0]
      }
    ],
    "styles": {
      "header": {
        "fontSize": 18,
        "bold": true,
        "margin": [0, 0, 0, 10]
      },
      "bookingNo": {
        "fontSize": 14,
        "bold": true,
        "margin": [0, 0, 0, 5]
      },
      "subheader": {
        "fontSize": 14,
        "bold": true,
        "margin": [0, 5, 0, 5]
      },
      "subject": {
        "fontSize": 16,
        "bold": true,
        "margin": [0, 20, 0, 10]
      },
      "termsTitle": {
        "fontSize": 16,
        "bold": true,
        "margin": [0, 10, 0, 5]
      },
      "content": {
        "fontSize": 12,
        "margin": [0, 5, 0, 5]
      }
    }
  }
}
