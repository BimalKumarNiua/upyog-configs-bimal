{
  "key": "petservicecertificate",
  "config": {
    "defaultStyle": {
      "font": "Cambay"
    },
    "content": [
      {
        "style": "noc-head",
        "table": {
          "widths": [60, "*", 120],
          "body": [
            [
              {
                "image": "{{logoImage}}",
                "width": 80,
                "height": 45
              },
              {
                "stack": [
                  {
                    "style": "header",
                    "text": ["PET CERTIFICATE"]
                  }
                ],
                "alignment": "left",
                "margin": [0, 0, 0, 0]
              },
              {
                "stack": [
                  {
                    "text": "{{address}}"
                  },

                  {
                    "text": " {{website}}"
                  },
                  {
                    "text": "{{email}} , {{phoneNumber}}"
                  }
                ],
                "alignment": "right",
                "color": "#484848",
                "margin": [-100, 0, -25, 0]
              }
            ]
          ]
        },
        "layout": "noBorders"
      },

      {
        "text": "This certifies that: {{Owner_Name}} with mobile Number: {{Owner_Contact}} has registered their Pet in an Urban Local Body with Pet details as follows:",
        "style": "content",
        "margin": [0, 50, 0, 10]
      },
      {
        "text": "Pet Name: {{Pet_Name}}",
        "style": "subheader",
        "margin": [0, 0, 0, 5]
      },
      {
        "text": "Pet Type: {{Pet_Type}}",
        "style": "subheader",
        "margin": [0, 0, 0, 5]
      },
      {
        "text": "Breed Type: {{Breed_Type}}",
        "style": "subheader",
        "margin": [0, 0, 0, 10]
      },
      {
        "text": "Vaccination Details:",
        "style": "subheader",
        "margin": [0, 0, 0, 10]
      },
      {
        "style": "content",
        "ol": [
          {
            "text": "Vaccination Number: {{Vaccine_Number}}",
            "margin": [0, 0, 0, 5]
          },
          {
            "text": "Vaccination Date: {{Vaccine_Date}}",
            "margin": [0, 0, 0, 5]
          },
          {
            "text": "Administered by Doctor: {{Doctor_Name}}",
            "margin": [0, 0, 0, 5]
          },
          {
            "text": "Clinic Name: {{Clinic_Name}}",
            "margin": [0, 0, 0, 15]
          }
        ]
      },
      {
        "text": "This certificate serves as an acknowledgment of the ownership of the above-mentioned pet and the fulfillment of all registration requirements.",
        "style": "footer"
      }
    ],
    "styles": {
      "header": {
        "fontSize": 15,
        "bold": true,
        "decoration": "underline",
        "alignment": "center",
        "margin": [0, 20, 0, 10]
      },
      "subheader": {
        "fontSize": 14,
        "margin": [0, 0, 0, 10]
      },
      "content": {
        "fontSize": 14,
        "margin": [0, 0, 0, 10]
      },
      "footer": {
        "fontSize": 14,
        "italics": true,
        "margin": [0, 20, 0, 0]
      }
    }
  }
}